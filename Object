  //For example:
  float var1;
    boolean var2;

  //This is where I build the constructor
  **object_Name**(float tempInput){
  //This is where I use the temp values to set the initial value of my parameters (var1, var2, etc)
  }


  //This is where I define the methods of my object
  void Method_Name(float tempInput){


  }

  float Method2_Name(){


  return(var_to_return);
}
  }
  
  
  
  
  ----------EXAMPLE----------
  
  Ball ball1;
  
  void setup(){
  ball1 = new Ball(100,100,20,color(0,0,255);
  }
  
  
  void draw(){
  ball1.display();
  
  }
  class Ball;
  float xpos;
  float ypos;
  float size;
  color c1;
  
  
  Ball(float tempX, float tempY, tempSize, tempC){
  xpos = tempX;
  ypos = tempY;
  size = tempSize;
  c1 = tempC;  
  
  }
  
  
  void display(){
    fill(c1);
    ellipse(xpos,ypos,size,size);

  }
 }
  
  
  
  
  
  
  
  
  
  
  
  
  
  
  
  
  
  
  
  
  
